{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/hooks.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "H=\"${CLAUDE_PLUGIN_ROOT}/hooks/pre-tool.sh\"; [ -f \"$H\" ] || H=$(ls \"$HOME\"/.claude/plugins/cache/*/forge/*/hooks/pre-tool.sh 2>/dev/null | head -1); [ -n \"$H\" ] && [ -f \"$H\" ] && bash \"$H\" || echo '{\"continue\":true}'",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "H=\"${CLAUDE_PLUGIN_ROOT}/hooks/post-tool.sh\"; [ -f \"$H\" ] || H=$(ls \"$HOME\"/.claude/plugins/cache/*/forge/*/hooks/post-tool.sh 2>/dev/null | head -1); [ -n \"$H\" ] && [ -f \"$H\" ] && bash \"$H\" || echo '{\"continue\":true}'",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "H=\"${CLAUDE_PLUGIN_ROOT}/hooks/lib/skill-detector.sh\"; [ -f \"$H\" ] || H=$(ls \"$HOME\"/.claude/plugins/cache/*/forge/*/hooks/lib/skill-detector.sh 2>/dev/null | head -1); [ -n \"$H\" ] && [ -f \"$H\" ] && bash \"$H\" || echo '{\"continue\":true}'",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "H=\"${CLAUDE_PLUGIN_ROOT}/hooks/lib/skill-detector.sh\"; [ -f \"$H\" ] || H=$(ls \"$HOME\"/.claude/plugins/cache/*/forge/*/hooks/lib/skill-detector.sh 2>/dev/null | head -1); [ -n \"$H\" ] && [ -f \"$H\" ] && bash \"$H\" || echo '{\"continue\":true}'",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
